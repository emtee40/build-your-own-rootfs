#!/bin/sh

PACKAGE=busybox
log "building busybox..."

F=$(download http://www.busybox.net/downloads/busybox-1.23.0.tar.bz2)
unpack $F busybox-1.23.0

pushd .build/busybox-1.23.0 >>/dev/null
log "preparing default config..."

make defconfig 2>&1 >>../busybox.log
log "compiling..."
make CROSS_COMPILE=$PREFIX -j${JOBS} 2>&1 >>../busybox.log
log "installing..."
make CROSS_COMPILE=$PREFIX install 2>&1 >>../busybox.log
log "appending to rootfs..."
pushd _install 2>&1 >>../busybox.log
append
popd 2>&1 >>../busybox.log
popd 2>&1 >>../busybox.log
