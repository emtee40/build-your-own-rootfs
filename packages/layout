#!/bin/sh

PACKAGE=layout

ROOT=`pwd`
log "preparing layout..."
rm -rf .build/layout
mkdir -p .build/layout
pushd .build/layout

mkdir dev
mkdir etc
mkdir media
mkdir sys
mkdir proc
mkdir tmp
mkdir var

log "adding initial layout..."
#echo "::sysinit:/etc/init.d/rcS" > etc/inittab
cp -r ${ROOT}/layout/common/ .
cp -r ${ROOT}/layout/vexpress . #fixme: add PLATFORM to build

append

popd
